{
  "include": [
    "packages/fliphub2/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "node_modules/**"
  ],
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "module": "commonjs",
    "isolatedModules": false,
    "jsx": "react",
    "removeComments": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": true,
    "alwaysStrict": false,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "skipLibCheck": true,
    "suppressExcessPropertyErrors": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": false,
    "noImplicitThis": false,
    "noImplicitUseStrict": false,
    "suppressImplicitAnyIndexErrors": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [ "dom", "es5", "scripthost", "es6" ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
       "node", "atom", "atom-keymap"
    ]
  },
  "compileOnSave": true,
  "buildOnSave": true
}
