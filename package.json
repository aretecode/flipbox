{
  "name": "fliphub-monorepo",
  "version": "0.1.3",
  "description": "the builder of builders",
  "main": "src/index.js",
  "scripts": {
    "_test": "lerna exec -- nyc --reporter=lcov --reporter=text-lcov npm run test",
    "test": "lerna exec -- nyc --reporter=json npm run test",
    "clean": "lerna exec -- rimraf coverage && lerna exec -- rimraf .nyc_output",
    "uninstall": "rm -rf node_modules && lerna exec -- rm -rf node_modules",
    "postinstall": "lerna bootstrap --concurrency=1 --loglevel=verbose"
  },
  "fliplog": {
    "todo": "",
    "presets": [
      "light/production",
      "fun",
      "debugging"
    ],
    "use": [
      "verbose",
      "color",
      "xterm",
      "chalk",

      "timer",
      "spinner", "ora",
      "multi-spinner",
      "box",
      "sparkly",
      "beep",
      "highlight",
      "!for-blacklist-instead-of-white",
      "table", "diff",
      "track", "trace",
      "json", "stringify",
      "sleep", "tosource",

      "register", "file",
      "story"
    ]
  },

  "directories": {
    "fliphub": "packages/fliphub",
    "cli": "packages/fliphub-cli",
    "chain": "packages/fliphub-chain",
    "cli-inferno": "packages/fliphub-cli-inferno",
    "helpers": "packages/helpers",
    "examples": "packages/examples",
    "docs": "docs",
    "packages": "packages",
    "modules-sub": "modules-sub",
    "modules": "modules"
  },
  "files": [
    "packages",
    "modules",
    "modules-sub",
    "docs"
  ],
  "engines": {
    "node": ">= 7.8.x",
    "npm": ">= 4.2.0"
  },
  "optionalDependencies": {
    "@types/atom": "0.0.36",
    "@types/atom-keymap": "^5.1.29",
    "@types/node": "^7.0.8",
    "babel-core": "^6.24.0",
    "babel-register": "^6.24.0",
    "tslint-eslint-rules": "^3.4.0",
    "typescript": "^2.2.1",
    "typescript-eslint-parser": "^2.0.0",
    "inquirer": "3.0.6",
    "oao": "^0.7.3"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.0",
    "eslint": "^3.16.1",
    "eslint-config-aretecode": "1.0.4-alpha.17585ee1",
    "eslint-plugin-ava": "^4.2.0",
    "flow-bin": "^0.42.0",
    "flowtype": "^2.0.0",
    "lerna": "2.0.0-beta.38",
    "nyc": "^10.2.0",
    "webpack": "2.3.3"
  },
  "keywords": [
    "builder",
    "app-builder",
    "bundler",
    "fusebox",
    "fuse-box",
    "webpack",
    "fliphub",
    "flipbox",
    "inferno",
    "cli"
  ],
  "author": "James <aretecode@gmail.com>",
  "homepage": "https://github.com/fliphub/fliphub#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fliphub/fliphub.git"
  },
  "bugs": {
    "url": "https://github.com/fliphub/fliphub/issues"
  },
  "dependencies": {
    "babel-loader-builder": "^0.2.0",
    "mahna": "*"
  }
}
